  <body>

{{!-- form section --}}

<section class="vh-100">
  <div class="container ">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card" style="border-radius: 1rem;background-color:#0000000a;">
          <div class="card-body p-5 text-center">

{{#if password}}
<h3 class="mb-5">thank your for your support mr{{password}}</h3>
<a><button class="btn btn-lg btn-block logout" onclick="fun()" type="submit">Logout</button></a>
<script >
    function fun(){
    window.location='/';
}</script>
{{else}}
            <h3 class="mb-5">Log in</h3>

            <form action="/submit" method="post">

            <div class="form-outline mb-4">
              <input type="text" name="mobile" placeholder="mobile no" class="form-control form-control-lg" required />
            </div>

            <div class="form-outline mb-4">
              <input type="password" name="password" placeholder="Password" class="form-control form-control-lg" required />
            </div>
            <div class="form-check d-flex justify-content-start mb-4">
             <a href="/signup" class="register">Don't have an account?<span class="signUp">Sign up</span></a>
            </div>
            <button class="btn btn-lg btn-block login" type="submit">Login</button>
            </form> 
             {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>

</section>
