{{!-- form section --}}

<section class="vh-100">
  <div class="container ">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card" style="border-radius: 1rem;background-color:#0000000a;">
          <div class="card-body p-5 text-center">
            <h3 >MetaMask</h3>
              <h5 class="mb-5">Log-in</h5>
            <form action="/submit" method="post">

            <div class="form-outline mb-4">
              <input type="text" name="uName" placeholder="userName" class="form-control form-control-lg" required/>
            </div>

            <div class="form-outline mb-4">
              <input type="password" name="password" placeholder="PassWord" class="form-control form-control-lg" required/>
            </div>
            <p class="error">{{error}}</p>
            <button class="btn btn-lg btn-block login" type="submit">Login</button>
            </form> 
          </div>
        </div>
      </div>
    </div>
  </div>

</section>
